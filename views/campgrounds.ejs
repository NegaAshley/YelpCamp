<% include partials/header %>

<h1>This is the campground page!</h1>

<% campgrounds.forEach(function(campground){ %>
    <div>
        <h4><%= campground.name %></h4>
        <img src="<%= campground.image %>">
    </div>
<% }); %>

<form action="/campgrounds" method="POST">
    <input type="text" name="newCampgroundName" placeholder="Campground Name">
    <input type="file" name="newCampgroundImage" accept="image/*">
    <input type="submit">
</form>

<% include partials/footer %>