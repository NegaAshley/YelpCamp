<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" 
                    name="campground[name]" placeholder="Campground Name"
                    value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" 
                    name="campground[image]" placeholder="Image URL" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]" placeholder="Campground Description">
                        <%= campground.description %>
                    </textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" 
                    type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>